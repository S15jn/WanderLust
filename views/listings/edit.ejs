<%layout('/layouts/boilerplate')-%>

<div class="row">
    <div class="col-8 offset-2">
        <br>
        <br>
    <h1>Edit Yours Listing</h1>
    <form method="POST" action="/listings/<%=listing._id %>?_method=PUT">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>

        <input type="text" name="listing[title]" value="<%=listing.title %>"  class="form-control" >
    </div>


    <div class="mb-3">
        <label for="description" class="form-label">Description</label>

        <textarea name="listing[description]"  class="form-control" ><%=listing.description %></textarea>
    </div>

    <div class="mb-3">
     <label for="image" class="form-label">Image_URL</label>

    <input type="text" name="listing[image]" value="<%=listing.image.url %>"  class="form-control" >
    <img src="<%=listing.image.url %>" alt="" srcset="" class="Edit-img">
    </div>


<div class="row">

<div class="mb-3 col-12 col-md-4">    
 <label for="price" class="form-label">Price</label>

<input type="number" name="listing[price]" value="<%=listing.price %>"  class="form-control" >
</div>

<div class="mb-3 col-12 col-md-8">
    <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" value="<%=listing.country %>"  class="form-control" >
</div>

</div>


    <div class="mb-3">
        <label for="location" class="form-label">Location</label>
    
        <input type="text" name="listing[location]" value="<%=listing.location %>"  class="form-control" >
    </div>

        <button class="btn btn-dark mb-3  new-btn">Edit</button>
    </form>
    
    
</div>
</div>
