<%layout('/layouts/boilerplate')%>

<div class="row">
    <div class="col-8 offset-2">
        <br>
        <br>
        <h1 class="mb-4 mt-3">Create new Listings</h1>
        <form method="post" action="/listings" class="needs-validation" novalidate>
            <div class="mb-3">

                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="listing[title]" placeholder="Enter title" id="title" required>
                <div class="valid-feedback">Sophisticated </div>
                <div class="invalid-feedback">Please provide a title.</div>
            </div>
        
            <div class="mb-3">
                <label for="description" class="form-label">Enter the description</label>
                <textarea name="listing[description]" class="form-control" placeholder="Enter description" id="description" style="min-width: 100%;" required></textarea>
                <div class="vaild-feedback">
                    Great description!
                </div>
                <div class="invalid-feedback">Please provide a description.</div>
            </div>
        
            <div class="mb-3">
                <label for="image" class="form-label">Enter the image URL</label>
                <input type="text" class="form-control" name="listing[image]" placeholder="Enter Image_URL" id="image">
            </div>
        
            <div class="row">
                <div class="mb-3 col-12 col-md-4">
                    <label for="price" class="form-label">Enter the price</label>
                    <input type="number" name="listing[price]" placeholder="Enter price" class="form-control" id="price" required>
                    <div class="invalid-feedback">Please provide a price.</div>
                </div>
        
                <div class="mb-3 col-12 col-md-8">
                    <label for="country" class="form-label">Enter the country</label>
                    <input type="text" name="listing[country]" placeholder="Enter country" class="form-control" id="country" required>
                    <div class="valid-feedback">
                        Remarkable place!
                    </div>
                    <div class="invalid-feedback">Please provide a country.</div>
                </div>
            </div>
        
            <div class="mb-3">
                <label for="location" class="form-label">Enter the location</label>
                <input type="text" name="listing[location]" placeholder="Enter location" class="form-control" id="location" required>
                <div class="valid-feedback">
                    Prime location!
                </div>
                <div class="invalid-feedback">Please provide a location.</div>
            </div>
        
            <button class="btn btn-dark mb-3  new-btn">ADD</button>
        </form>
         
    </div>
</div>
