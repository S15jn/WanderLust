<%layout('/layouts/boilerplate')%>


<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-4 text-capitalize">SignUp for AanganBreeze </h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label text-capitalize">Username</label>
                <input type="text" class="form-control" name="username"  id="username" required>
                <div class="valid-feedback text-capitalize">Looks good! </div>
                <div class="invalid-feedback text-capitalize">Please provide a username.</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label text-capitalize">Email</label>
                <input type="email" class="form-control" name="email"  id="email" required>
                <div class="valid-feedback text-capitalize">Looks good! </div>
                <div class="invalid-feedback text-capitalize">Please provide a valid Email.</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label text-capitalize">password</label>
                <input type="password" class="form-control" name="password"  id="password" required>
            
                <div class="invalid-feedback text-capitalize">Please Provide a  Strong Password.</div>
            </div>

            <button class="btn btn-dark mb-2 text-capitalize">SignUp</button>
        <h5 class="centre">OR</h5>

        <a href="/auth/google">
          <button type="button" class="btn btn-dark mb-5 text-capitalize">
            Login with Google
          </button>
        </a>
        </form>
        </div>
        </div>
