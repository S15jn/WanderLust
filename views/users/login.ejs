<%layout('/layouts/boilerplate')%>


<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-4 text-capitalize">Login for AanganBreeze </h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label text-capitalize">Username</label>
                <input type="text" class="form-control" name="username"  id="username" required>
                <div class="invalid-feedback text-capitalize">Please provide a username.</div>
            </div>
          
            <div class="mb-3">
                <label for="password" class="form-label text-capitalize">password</label>
                <input type="password" class="form-control" name="password"  id="password" required>
            
                <div class="invalid-feedback text-capitalize">Please Provide a  Strong Password.</div>
            </div>

            <button class="btn btn-dark mb-5 text-capitalize">Login</button>

        </form>
        </div>
        </div>
